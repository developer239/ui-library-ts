{
  "name": "ui-react-library",
  "version": "1.10.1",
  "license": "MIT",
  "scripts": {
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build": "rollup -c",
    "lint:ts": "tslint './src/**/*.{ts,tsx}'",
    "lint:css": "node node_modules/.bin/stylelint ./src",
    "prettier": "prettier --write './src/**/*.{ts,tsx}'",
    "semantic-release": "semantic-release",
    "prepare": "npm run build",
    "test": "jest",
    "heroku-postbuild": "NODE_PATH=src build-storybook -o public",
    "start": "http-server"
  },
  "main": "./lib/index.js",
  "module": "./lib/index.es.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,stories}/**/*.{ts,tsx}": [
      "npm run prettier",
      "npm run lint:ts --fix --force",
      "git add"
    ]
  },
  "peerDependencies": {
    "react": ">=16.7.0-alpha.2",
    "react-dom": ">=16.7.0-alpha.2",
    "styled-components": ">=4.1.3"
  },
  "devDependencies": {
    "@babel/core": "7.4.5",
    "@babel/plugin-proposal-class-properties": "7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "7.4.4",
    "@babel/preset-env": "7.4.5",
    "@babel/preset-typescript": "7.3.3",
    "@semantic-release/changelog": "3.0.4",
    "@semantic-release/commit-analyzer": "6.2.0",
    "@semantic-release/git": "7.0.15",
    "@semantic-release/npm": "5.1.13",
    "@semantic-release/release-notes-generator": "7.2.1",
    "@storybook/addon-storyshots": "5.1.9",
    "@storybook/addons": "5.1.9",
    "@storybook/react": "5.1.9",
    "@types/ramda": "0.26.12",
    "@types/react": "16.8.22",
    "@types/react-dom": "16.8.4",
    "@types/storybook__addon-actions": "3.4.3",
    "@types/storybook__addon-knobs": "5.0.1",
    "@types/storybook__addon-links": "3.3.5",
    "@types/storybook__addon-storyshots": "4.0.1",
    "@types/storybook__react": "4.0.2",
    "@types/styled-components": "4.1.16",
    "awesome-typescript-loader": "5.2.1",
    "babel-loader": "8.0.6",
    "http-server": "0.11.1",
    "husky": "2.7.0",
    "jest": "24.8.0",
    "lint-staged": "8.2.1",
    "prettier": "1.18.2",
    "react": "16.8.6",
    "react-docgen-typescript-webpack-plugin": "1.1.0",
    "react-dom": "16.8.6",
    "react-test-renderer": "16.8.6",
    "rollup": "1.16.3",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "10.0.1",
    "rollup-plugin-filesize": "6.1.1",
    "rollup-plugin-node-resolve": "5.1.1",
    "rollup-plugin-peer-deps-external": "2.2.0",
    "rollup-plugin-progress": "1.1.1",
    "rollup-plugin-typescript": "1.0.1",
    "semantic-release": "15.13.18",
    "styled-components": "4.3.2",
    "stylelint": "10.1.0",
    "stylelint-config-standard": "18.3.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.8.0",
    "ts-jest": "24.0.2",
    "tslint": "5.18.0",
    "typescript": "3.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/developer239/ui-library-ts.git"
  },
  "dependencies": {
    "ramda": "0.26.1",
    "styled-is": "1.3.0"
  },
  "greenkeeper": {
    "ignore": [
      "react",
      "@types/react",
      "react-test-renderer",
      "react-dom",
      "@types/react-dom"
    ]
  }
}
