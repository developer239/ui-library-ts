{
  "name": "ui-react-library",
  "version": "1.0.4",
  "license": "MIT",
  "scripts": {
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build": "rollup -c",
    "lint:ts": "tslint './src/**/*.{ts,tsx}'",
    "lint:css": "node node_modules/.bin/stylelint ./src",
    "prettier": "prettier --write './src/**/*.{ts,tsx}'",
    "semantic-release": "semantic-release",
    "prepare": "npm run build"
  },
  "main": "index.js",
  "files": [
    "lib"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,stories}/**/*.{ts,tsx}": [
      "npm run prettier",
      "npm run lint:ts --fix --force",
      "git add"
    ]
  },
  "peerDependencies": {
    "react": ">=16.7.0-alpha.2",
    "react-dom": ">=16.7.0-alpha.2",
    "styled-components": ">=4.1.3"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "^7.0.7",
    "@semantic-release/npm": "^5.1.3",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "@storybook/addons": "4.1.4",
    "@storybook/react": "4.1.4",
    "@types/react": "16.7.18",
    "@types/react-dom": "16.0.11",
    "@types/storybook__addon-actions": "3.4.1",
    "@types/storybook__addon-knobs": "4.0.0",
    "@types/storybook__addon-links": "3.3.3",
    "@types/storybook__react": "4.0.0",
    "@types/styled-components": "4.1.4",
    "awesome-typescript-loader": "5.2.1",
    "babel-loader": "8.0.4",
    "husky": "^1.2.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "react": "16.7.0-alpha.2",
    "react-docgen-typescript-webpack-plugin": "1.1.0",
    "react-dom": "16.7.0-alpha.2",
    "rollup": "0.68.2",
    "rollup-plugin-filesize": "5.0.1",
    "rollup-plugin-peer-deps-external": "2.2.0",
    "rollup-plugin-progress": "0.4.0",
    "rollup-plugin-typescript": "1.0.0",
    "semantic-release": "^15.13.2",
    "styled-components": "4.1.3",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.1",
    "tslint": "^5.12.0",
    "typescript": "3.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/developer239/ui-library-ts.git"
  }
}
