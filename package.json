{
  "name": "ui-react-library",
  "version": "1.5.27",
  "license": "MIT",
  "scripts": {
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build": "rollup -c",
    "lint:ts": "tslint './src/**/*.{ts,tsx}'",
    "lint:css": "node node_modules/.bin/stylelint ./src",
    "prettier": "prettier --write './src/**/*.{ts,tsx}'",
    "semantic-release": "semantic-release",
    "prepare": "npm run build",
    "test": "jest",
    "heroku-postbuild": "NODE_PATH=src build-storybook -o public",
    "start": "http-server"
  },
  "main": "./lib/index.js",
  "module": "./lib/index.es.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,stories}/**/*.{ts,tsx}": [
      "npm run prettier",
      "npm run lint:ts --fix --force",
      "git add"
    ]
  },
  "peerDependencies": {
    "react": ">=16.7.0-alpha.2",
    "react-dom": ">=16.7.0-alpha.2",
    "styled-components": ">=4.1.3"
  },
  "devDependencies": {
    "@babel/core": "7.3.4",
    "@babel/plugin-proposal-class-properties": "7.3.4",
    "@babel/plugin-proposal-object-rest-spread": "7.3.4",
    "@babel/preset-env": "7.3.4",
    "@babel/preset-typescript": "7.3.3",
    "@semantic-release/changelog": "3.0.2",
    "@semantic-release/commit-analyzer": "6.1.0",
    "@semantic-release/git": "7.0.8",
    "@semantic-release/npm": "5.1.4",
    "@semantic-release/release-notes-generator": "7.1.4",
    "@storybook/addon-storyshots": "4.1.12",
    "@storybook/addons": "4.1.12",
    "@storybook/react": "4.1.12",
    "@types/ramda": "0.25.50",
    "@types/react": "16.7.18",
    "@types/react-dom": "16.0.11",
    "@types/storybook__addon-actions": "3.4.1",
    "@types/storybook__addon-knobs": "4.0.1",
    "@types/storybook__addon-links": "3.3.3",
    "@types/storybook__addon-storyshots": "3.4.7",
    "@types/storybook__react": "4.0.0",
    "@types/styled-components": "4.1.11",
    "awesome-typescript-loader": "5.2.1",
    "babel-loader": "8.0.5",
    "http-server": "^0.11.1",
    "husky": "1.3.1",
    "jest": "24.0.0",
    "lint-staged": "8.1.5",
    "prettier": "1.16.1",
    "react": "16.7.0-alpha.2",
    "react-docgen-typescript-webpack-plugin": "1.1.0",
    "react-dom": "16.7.0-alpha.2",
    "react-test-renderer": "16.7.0-alpha.2",
    "rollup": "1.3.3",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-filesize": "6.0.1",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-peer-deps-external": "2.2.0",
    "rollup-plugin-progress": "1.0.0",
    "rollup-plugin-typescript": "^1.0.0",
    "semantic-release": "15.13.3",
    "styled-components": "4.1.3",
    "stylelint": "9.10.1",
    "stylelint-config-standard": "18.2.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-processor-styled-components": "1.5.2",
    "ts-jest": "23.10.5",
    "tslint": "5.12.1",
    "typescript": "3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/developer239/ui-library-ts.git"
  },
  "dependencies": {
    "ramda": "0.26.1",
    "styled-is": "1.1.5"
  },
  "greenkeeper": {
    "ignore": [
      "react",
      "@types/react",
      "react-test-renderer",
      "react-dom",
      "@types/react-dom"
    ]
  }
}
